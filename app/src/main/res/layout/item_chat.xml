<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/gray6"
        android:id="@+id/cv_guest"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_177"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="0dp">
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_guest_img"/>
        <ImageView
            android:src="@mipmap/ic_play"
            android:layout_gravity="center"
            android:id="@+id/bt_play_guest"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
        <ProgressBar
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_gravity="center"
            android:id="@+id/pb_loading_guest"/>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_60"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_guest_mess"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">
        <TextView
            android:id="@+id/tv_guest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo2_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:id="@+id/tv_guest_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:fontFamily="@font/baloo2_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/gray6"
        android:id="@+id/cv_user"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_177"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/dp_10">
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_user_img"
           />
        <ImageView
            android:src="@mipmap/ic_play"
            android:layout_gravity="center"
            android:id="@+id/bt_play_user"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
        <ProgressBar
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_gravity="center"
            android:id="@+id/pb_loading_user"/>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dp_60"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="end"
        android:visibility="visible">
        <ImageView
            android:id="@+id/iv_seen"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/ic_seen"
            android:layout_gravity="bottom"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_10"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_your_mess"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">
            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo2_regular"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/tv_user_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:fontFamily="@font/baloo2_regular"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>