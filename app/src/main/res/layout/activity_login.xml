<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.authentication.Login">
    <include layout="@layout/bg_app"/>
    <ImageView
        android:id="@+id/bt_back"
        android:layout_margin="@dimen/dp_15"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@mipmap/ic_back"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@id/bt_back"
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_15">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/bt_back"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_55"
            android:src="@drawable/img_app_logo"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_to_signup"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/don_t_have_a_account"
                android:fontFamily="@font/baloo2_regular"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_to_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/free_signup"
                android:fontFamily="@font/baloo2_semibold"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_primary"
                android:layout_marginStart="@dimen/dp_5"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <View
                android:background="@color/black"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_1"/>
            <TextView
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or_login_with"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                android:fontFamily="@font/baloo2_medium"
                android:layout_gravity="center_horizontal"/>
            <View
                android:background="@color/black"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_1"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/bt_gg"
                app:cardCornerRadius="@dimen/dp_50"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/gray6"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="@dimen/dp_10"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:src="@mipmap/ic_gg"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="@dimen/dp_10"
                android:id="@+id/bt_fb"
                app:cardCornerRadius="@dimen/dp_50"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/gray6"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="@dimen/dp_10"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:src="@mipmap/ic_fb"/>
            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <TextView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/baloo2_semibold"
            android:text="@string/login"
            android:textAllCaps="true"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/baloo2_semibold"
            android:text="@string/email_address"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bg_edt"
            app:endIconMode="clear_text"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@android:color/transparent"
                android:fontFamily="@font/baloo2_regular"
                android:hint="@string/enter_email_address"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="@dimen/dp_10"
                android:singleLine="true"
                android:textColorHint="@color/gray1"
                android:textSize="@dimen/sp_16" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:fontFamily="@font/baloo2_semibold"
            android:text="@string/password"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bg_edt"
            app:endIconMode="password_toggle"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_pw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@android:color/transparent"
                android:fontFamily="@font/baloo2_regular"
                android:hint="@string/enter_password"
                android:inputType="textPassword"
                android:paddingHorizontal="@dimen/dp_10"
                android:singleLine="true"
                android:textColorHint="@color/gray1"
                android:textSize="@dimen/sp_16" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tv_fg_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/baloo2_semibold"
            android:text="@string/forgot_password"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/sp_16" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_login"
            style="@style/button_primary"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_55"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:text="@string/login"
            android:textAllCaps="true" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:id="@+id/tv_terms"
        android:paddingHorizontal="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:fontFamily="@font/baloo2_semibold"
        android:lineSpacingExtra="-5dp"
        android:text="@string/by_proceeding_to_use_matcheron_you_agree_to_our_terms_and_privacy_policy"/>
</RelativeLayout>