<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:background="@drawable/bg_popup_rq_login"
        android:padding="@dimen/dp_20"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_45"
            android:src="@drawable/img_app_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:fontFamily="@font/baloo2_medium"
            android:text="Are you sure the religion you selected is the correct one?"
            android:layout_marginVertical="@dimen/dp_20"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_yes"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_55"
            app:backgroundTint="@color/color_primary"
            app:elevation="0dp"
            app:cornerRadius="@dimen/dp_20"
            android:textColor="@color/white"
            android:text="Yes, I'm "
            android:textAllCaps="false"
            android:textSize="@dimen/sp_16"
            android:fontFamily="@font/baloo2_semibold"
            android:layout_marginTop="@dimen/dp_20"/>
        <Button
            android:paddingHorizontal="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:textAllCaps="false"
            android:background="@drawable/bg_et_search"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/gray1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:fontFamily="@font/baloo2_medium"
            android:id="@+id/bt_no"
            android:text="@string/wait_let_me_correct_it"
            android:layout_marginBottom="@dimen/dp_10"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>