<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/dp_15">
    <RelativeLayout
        android:paddingVertical="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/bt_back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/ic_close"
            app:tint="@color/color_primary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo2_semibold"
            android:text="@string/report"
            android:layout_centerInParent="true"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/sp_22" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_reason_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/baloo2_bold"
        android:textSize="@dimen/sp_18"
        android:text="@string/bullying_harassment_or_abuse"
        android:layout_marginTop="@dimen/dp_20"/>
    <TextView
        android:id="@+id/tv_reason_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/baloo2_bold"
        android:textSize="@dimen/sp_18"
        android:text="@string/adult_content"
        android:layout_marginTop="@dimen/dp_20"/>
    <TextView
        android:id="@+id/tv_reason_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/baloo2_bold"
        android:textSize="@dimen/sp_18"
        android:text="@string/scam_fraud_or_false_information"
        android:layout_marginVertical="@dimen/dp_20"/>
</androidx.appcompat.widget.LinearLayoutCompat>