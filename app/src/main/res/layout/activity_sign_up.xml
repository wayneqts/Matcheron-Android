<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.authentication.SignUp">
    <include layout="@layout/bg_app"/>
    <ImageView
        android:id="@+id/bt_back"
        android:layout_margin="@dimen/dp_15"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@mipmap/ic_back"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv"
        android:paddingHorizontal="@dimen/dp_15"
        android:layout_below="@id/bt_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_logo"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_55"
                android:src="@drawable/img_app_logo"/>
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strictly_confidential"
                android:textColor="@color/gray2"
                android:textSize="@dimen/sp_18"
                android:fontFamily="@font/baloo2_semibold"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_marginTop="-5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/only_first_name_is_displayed"
                android:textColor="@color/gray2"
                android:textSize="@dimen/sp_18"
                android:fontFamily="@font/baloo2_semibold"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/free_express_sign_up"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/sp_22"
                android:fontFamily="@font/baloo2_semibold"
                android:layout_gravity="center_horizontal"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:paddingVertical="@dimen/dp_3"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:paddingHorizontal="@dimen/dp_8"
                android:background="@drawable/bg_border_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:lineHeight="@dimen/dp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo2_regular"
                    android:text="@string/complete_your_profile_with_a_photo_and_details_or_it_will_be_deleted"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />
                <TextView
                    android:lineHeight="@dimen/dp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo2_regular"
                    android:text="@string/_2_escort_and_massage_services_explicit_hookups_and_any_unlawful_activities_are_strictly_prohibited"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_step_1">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <View
                        android:background="@color/black"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_1"/>
                    <TextView
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/with_email_or_with"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16"
                        android:fontFamily="@font/baloo2_medium"
                        android:layout_gravity="center_horizontal"/>
                    <View
                        android:background="@color/black"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_1"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/bt_gg"
                        app:cardCornerRadius="@dimen/dp_50"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/gray6"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="@dimen/dp_10"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:src="@mipmap/ic_gg"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="@dimen/dp_10"
                        android:id="@+id/bt_fb"
                        app:cardCornerRadius="@dimen/dp_50"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/gray6"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="@dimen/dp_10"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:src="@mipmap/ic_fb"/>
                    </androidx.cardview.widget.CardView>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/first_name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_18"
                            android:fontFamily="@font/baloo2_medium"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="@drawable/bg_edt"
                            app:endIconMode="clear_text"
                            app:hintEnabled="false">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_f_name"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_45"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/baloo2_regular"
                                android:hint="@string/enter_first_name"
                                android:inputType="textCapSentences"
                                android:paddingHorizontal="@dimen/dp_10"
                                android:singleLine="true"
                                android:textColorHint="@color/gray1"
                                android:textSize="@dimen/sp_16" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/last_name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_18"
                            android:fontFamily="@font/baloo2_medium"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="@drawable/bg_edt"
                            app:endIconMode="clear_text"
                            app:hintEnabled="false">
                            <com.google.android.material.textfield.TextInputEditText
                                android:imeOptions="actionDone"
                                android:id="@+id/et_l_name"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_45"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/baloo2_regular"
                                android:hint="@string/enter_last_name"
                                android:inputType="textCapSentences"
                                android:paddingHorizontal="@dimen/dp_10"
                                android:singleLine="true"
                                android:textColorHint="@color/gray1"
                                android:textSize="@dimen/sp_16" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <TextView
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:fontFamily="@font/baloo2_medium"/>
                <RadioGroup
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/rg_gender"
                    android:checkedButton="@id/rb_male"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rb_male"
                        android:paddingStart="@dimen/dp_6"
                        android:textColor="@color/black"
                        android:text="@string/male"
                        android:textSize="@dimen/sp_15"
                        android:fontFamily="@font/baloo2_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/cb_selector"/>
                    <RadioButton
                        android:id="@+id/rb_female"
                        android:paddingStart="@dimen/dp_6"
                        android:layout_marginStart="@dimen/dp_15"
                        android:textColor="@color/black"
                        android:text="@string/female"
                        android:textSize="@dimen/sp_15"
                        android:fontFamily="@font/baloo2_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/cb_selector"/>
                </RadioGroup>
                <TextView
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seeking"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:fontFamily="@font/baloo2_medium"/>
                <RadioGroup
                    android:alpha=".5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/rg_seeking"
                    android:checkedButton="@id/rb_female_seeking"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:enabled="false"
                        android:id="@+id/rb_male_seeking"
                        android:paddingStart="@dimen/dp_6"
                        android:textColor="@color/black"
                        android:text="@string/male"
                        android:textSize="@dimen/sp_15"
                        android:fontFamily="@font/baloo2_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/cb_selector"/>
                    <RadioButton
                        android:enabled="false"
                        android:id="@+id/rb_female_seeking"
                        android:paddingStart="@dimen/dp_6"
                        android:layout_marginStart="@dimen/dp_15"
                        android:textColor="@color/black"
                        android:text="@string/female"
                        android:textSize="@dimen/sp_15"
                        android:fontFamily="@font/baloo2_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/cb_selector"/>
                </RadioGroup>
                <TextView
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:fontFamily="@font/baloo2_medium"/>
                <ProgressBar
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/pb_goal"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rcv_goal"/>
                <TextView
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/religion"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:fontFamily="@font/baloo2_medium"/>
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/bg_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:background="@android:color/transparent"
                        android:id="@+id/spinner_religion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ProgressBar
                        android:layout_marginStart="@dimen/dp_13"
                        android:layout_centerVertical="true"
                        android:id="@+id/pb_religion"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"/>
                    <ImageView
                        android:layout_marginEnd="@dimen/dp_13"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:src="@mipmap/ic_down"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pairing"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:fontFamily="@font/baloo2_medium"/>
                <RadioGroup
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/rg_pairing"
                    android:checkedButton="@id/rb_exclusive"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rb_exclusive"
                        android:paddingStart="@dimen/dp_6"
                        android:textColor="@color/color_primary"
                        android:text="@string/exclusive"
                        android:textSize="@dimen/sp_16"
                        android:fontFamily="@font/baloo2_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/cb_selector"/>
                    <RadioButton
                        android:id="@+id/rb_open"
                        android:paddingStart="@dimen/dp_6"
                        android:layout_marginStart="@dimen/dp_15"
                        android:textColor="@color/green"
                        android:text="@string/open"
                        android:textSize="@dimen/sp_16"
                        android:fontFamily="@font/baloo2_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/cb_selector"/>
                </RadioGroup>
                <TextView
                    android:lineHeight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_exclusive_to_match_solely_within_your_religion_or_open_if_you_are_open_to_all"
                    android:textColor="@color/gray2"
                    android:textSize="@dimen/sp_18"
                    android:fontFamily="@font/baloo2_semibold"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20"
                android:id="@+id/ll_step_2">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/age"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_18"
                            android:fontFamily="@font/baloo2_medium"/>
                            <com.google.android.material.textfield.TextInputEditText
                                android:nextFocusDown="@id/et_height"
                                android:id="@+id/et_age"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_45"
                                android:layout_marginTop="@dimen/dp_5"
                                android:background="@drawable/bg_edt"
                                android:fontFamily="@font/baloo2_regular"
                                android:hint="@string/age"
                                android:inputType="phone"
                                android:digits="0123456789"
                                android:paddingHorizontal="@dimen/dp_10"
                                android:singleLine="true"
                                android:textColorHint="@color/gray1"
                                android:textSize="@dimen/sp_16" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/height"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_18"
                            android:fontFamily="@font/baloo2_medium"/>

                            <com.google.android.material.textfield.TextInputEditText
                                android:nextFocusDown="@id/et_weight"
                                android:id="@+id/et_height"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_45"
                                android:layout_marginTop="@dimen/dp_5"
                                android:background="@drawable/bg_edt"
                                android:fontFamily="@font/baloo2_regular"
                                android:hint="@string/feet_inches"
                                android:inputType="phone"
                                android:digits="0123456789"
                                android:paddingHorizontal="@dimen/dp_10"
                                android:singleLine="true"
                                android:textColorHint="@color/gray1"
                                android:textSize="@dimen/sp_16" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/weight"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_18"
                            android:fontFamily="@font/baloo2_medium"/>

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_weight"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_45"
                                android:layout_marginTop="@dimen/dp_5"
                                android:background="@drawable/bg_edt"
                                android:fontFamily="@font/baloo2_regular"
                                android:hint="@string/pounds"
                                android:inputType="phone"
                                android:digits="0123456789"
                                android:paddingHorizontal="@dimen/dp_10"
                                android:singleLine="true"
                                android:textColorHint="@color/gray1"
                                android:textSize="@dimen/sp_16" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_5"
                    android:paddingHorizontal="@dimen/dp_8"
                    android:background="@drawable/bg_border_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo2_regular"
                        android:text="@string/enter_correct_info_or_profile_will_be_deleted"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/baloo2_medium"
                    android:text="@string/email_address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/bg_edt"
                    app:endIconMode="clear_text"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/baloo2_regular"
                        android:hint="@string/email_address"
                        android:inputType="textEmailAddress"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:singleLine="true"
                        android:textColorHint="@color/gray1"
                        android:textSize="@dimen/sp_16" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/baloo2_medium"
                    android:text="@string/password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/bg_edt"
                    app:endIconMode="password_toggle"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_pw"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/baloo2_regular"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:singleLine="true"
                        android:textColorHint="@color/gray1"
                        android:textSize="@dimen/sp_16" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/baloo2_medium"
                    android:text="@string/mobile_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/bg_edt"
                    app:endIconMode="clear_text"
                    app:hintEnabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/baloo2_regular"
                        android:hint="@string/mobile"
                        android:inputType="phone"
                        android:digits="0123456789"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:singleLine="true"
                        android:textColorHint="@color/gray1"
                        android:textSize="@dimen/sp_16" />
                </com.google.android.material.textfield.TextInputLayout>
                <RadioGroup
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/rg_show"
                    android:checkedButton="@id/rb_hide"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rb_hide"
                        android:paddingStart="@dimen/dp_6"
                        android:textColor="@color/black"
                        android:text="@string/hide"
                        android:textSize="@dimen/sp_15"
                        android:fontFamily="@font/baloo2_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
