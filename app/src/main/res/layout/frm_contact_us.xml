<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FrmContactUs"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/dp_15">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_55"
            android:src="@drawable/img_app_logo"/>
        <TextView
            android:lineHeight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/if_you_have_any_comment_or_complaint_please_send_this_message_with_attachment"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:fontFamily="@font/baloo2_medium"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/baloo2_medium"
            android:text="@string/message"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bg_edt"
            app:endIconMode="clear_text"
            app:hintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:gravity="top"
                android:id="@+id/et_mess"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:background="@android:color/transparent"
                android:fontFamily="@font/baloo2_regular"
                android:hint="@string/enter_your_message"
                android:inputType="textMultiLine"
                android:padding="@dimen/dp_10"
                android:textColorHint="@color/gray1"
                android:textSize="@dimen/sp_16" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/baloo2_medium"
            android:text="@string/attach"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/bt_choose_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/bt_delete"
                android:fontFamily="@font/baloo2_medium"
                android:text="@string/choose_file"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/sp_16"/>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_marginStart="@dimen/dp_10"
                android:id="@+id/bt_delete"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardBackgroundColor="@color/color_primary">
                <ImageView
                    app:tint="@color/white"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_8"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_close"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_send"
            style="@style/button_primary"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_55"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:text="@string/send" />
        <TextView
            android:lineHeight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/commercial_promotion_or_spam_is_totally_prohibited_abusers_will_be_banned_from_this_platform"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:fontFamily="@font/baloo2_medium"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>